<div class="container">
    <h1 class="mt-5">Movie Quiz</h1>
    <form id="quizForm">
        <% [
                {
                    "question": "Who directed the movie 'Inception'?",
                    "options": ["Christopher Nolan", "Steven Spielberg", "Quentin Tarantino", "Martin Scorsese"],
                    "correctAnswer": "Christopher Nolan"
                },
                {
                    "question": "Which actor played the role of Neo in 'The Matrix' trilogy?",
                    "options": ["Keanu Reeves", "Leonardo DiCaprio", "Tom Cruise", "Brad Pitt"],
                    "correctAnswer": "Keanu Reeves"
                },
                {
                    "question": "Which movie won the Academy Award for Best Picture in 2019?",
                    "options": ["Parasite", "The Shape of Water", "Moonlight", "12 Years a Slave"],
                    "correctAnswer": "Parasite"
                },
                {
                    "question": "Who is the main character in the movie 'Forrest Gump'?",
                    "options": ["Tom Hanks", "Robert De Niro", "Brad Pitt", "Johnny Depp"],
                    "correctAnswer": "Tom Hanks"
                },
                {
                    "question": "What is the highest-grossing film of all time?",
                    "options": ["Avatar", "Avengers: Endgame", "Titanic", "Star Wars: The Force Awakens"],
                    "correctAnswer": "Avengers: Endgame"
                }
            ].forEach(function(question, index) { %>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Question <%= index + 1 %></h5>
                    <p class="card-text"><%= question.question %></p>
                    <div class="form-check">
                        <% question.options.forEach(function(option) { %>
                            <input class="form-check-input" type="radio" name="answer<%= index %>" id="option<%= index %>" value="<%= option %>">
                            <label class="form-check-label" for="option<%= index %>">
                                <%= option %>
                            </label><br>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% }); %>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>

    <!-- Timer -->
    <div id="timer" class="mt-3">
        <p>Time Remaining: <span id="time">60</span> seconds</p>
    </div>

    <!-- Correct Answers -->
    <div id="correctAnswers" class="mt-3" style="display: none;">
        <h3>Correct Answers</h3>
        <ul>
            <% [
                    {
                        "question": "Who directed the movie 'Inception'?",
                        "options": ["Christopher Nolan", "Steven Spielberg", "Quentin Tarantino", "Martin Scorsese"],
                        "correctAnswer": "Christopher Nolan"
                    },
                    {
                        "question": "Which actor played the role of Neo in 'The Matrix' trilogy?",
                        "options": ["Keanu Reeves", "Leonardo DiCaprio", "Tom Cruise", "Brad Pitt"],
                        "correctAnswer": "Keanu Reeves"
                    },
                    {
                        "question": "Which movie won the Academy Award for Best Picture in 2019?",
                        "options": ["Parasite", "The Shape of Water", "Moonlight", "12 Years a Slave"],
                        "correctAnswer": "Parasite"
                    },
                    {
                        "question": "Who is the main character in the movie 'Forrest Gump'?",
                        "options": ["Tom Hanks", "Robert De Niro", "Brad Pitt", "Johnny Depp"],
                        "correctAnswer": "Tom Hanks"
                    },
                    {
                        "question": "What is the highest-grossing film of all time?",
                        "options": ["Avatar", "Avengers: Endgame", "Titanic", "Star Wars: The Force Awakens"],
                        "correctAnswer": "Avengers: Endgame"
                    }
                ].forEach(function(question, index) { %>
                <li>Question <%= index + 1 %>: <%= question.correctAnswer %></li>
            <% }); %>
        </ul>
    </div>

    <!-- Facebook Share Button -->
    <div class="mt-3">
        <button class="btn btn-primary" onclick="shareOnFacebook()">Share on Facebook</button>
    </div>
</div>

<!-- Bootstrap JS and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
